{
  "name": "SugoiJS-Starter",
  "version": "1.1.0",
  "description": "Starter project for SugoiJS framework - contains Server, ORM and sockets",
  "main": "src/dist/server.js",
  "private": false,
  "scripts": {
    "start": "npm run clean && npm run build:server && node dist/server.js &",
    "start:dev": "npm run dev & && nodemon dist/server.js --inspect ./node_modules/webpack/bin/webpack.js &",
    "clean": "rimraf dist",
    "dev": "webpack --config ./config/webpack.server.js --progress --profile --bail --display-chunks --hide-modules --watch",
    "build": "npm run clean && npm run build:server",
    "build:server": "webpack --config ./config/webpack.server.js --progress --profile --bail --display-chunks --hide-modules",
    "test": "npm run clean && npm run test:server",
    "test:server": "echo 'not implemented'",
    "test:server:watch": "echo 'not implemented'"
  },
  "author": "Orel Balilti",
  "license": "MIT",
  "dependencies": {
    "@sugoi/core": "^4.0.3",
    "@sugoi/mongodb": "^4.0.1",
    "@sugoi/orm": "^4.0.0",
    "@sugoi/server": "^4.0.0",
    "@sugoi/socket": "^4.0.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/express": "^4.16.0",
    "@types/node": "^12.0.12",
    "@types/winston": "^2.4.4",
    "awesome-typescript-loader": "^5.2.1",
    "mongodb-memory-server": "^5.1.5",
    "nodemon": "^1.18.7",
    "rimraf": "^2.6.2",
    "ts-helpers": "^1.1.2",
    "typescript": "^3.2.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  }
}
